{
    "name": "boilerplate-ts-jest",
    "description": "Node.js boilerplate - Typescript + Jest",
    "version": "1.0.0",
    "dependencies": {
        "axios": "^0.20.0",
        "express": "^4.17.1",
        "pino": "^6.6.0",
        "pino-http": "^5.2.0",
        "pino-pretty": "^4.2.1",
        "tsc": "^1.20150623.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.8",
        "@types/jest": "^26.0.13",
        "@types/node": "^14.10.1",
        "@types/pino": "^6.3.0",
        "@types/pino-http": "^5.0.5",
        "@types/source-map-support": "^0.5.3",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "jest": "^26.4.2",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.1",
        "serve": "^11.3.2",
        "source-map-support": "^0.5.19",
        "ts-jest": "^26.3.0",
        "typescript": "^4.0.2"
    },
    "scripts": {
        "dev": "nodemon -e js -e ts --exec 'npm run build && node build/index.js | pino-pretty'",
        "lint": "eslint . --ext .ts",
        "test": "rm -rf ./coverage && jest --coverage",
        "coverage": "serve coverage/lcov-report",
        "clean": "rm -rf ./build",
        "build": "tsc",
        "ci": "npm run lint && npm test && npm run clean && npm run build",
        "start": "node build/index.js"
    },
